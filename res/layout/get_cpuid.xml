<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#383838"
    >
    
     <TextView
   		android:layout_width="wrap_content"
   		android:id="@+id/cpu_id" 
   		android:layout_height="wrap_content"
   		android:textSize="@dimen/test_item_tips_text_size"
   		android:textColor="#00ff00"
   		>
  </TextView>
     	 <TextView
   		android:layout_width="wrap_content"
   		android:id="@+id/cpu_count" 
   		android:layout_height="wrap_content"
   		android:textSize="@dimen/test_item_tips_text_size"
   		android:textColor="#00ff00"
   		>	
  	 </TextView>
       <TextView
       android:paddingTop="@dimen/test_item_button_text_size"
   		android:layout_width="fill_parent"
   		android:id="@+id/cpu_tips" 
   		android:layout_height="wrap_content"
   		android:textSize="@dimen/test_item_tips_text_size"
   		android:textColor="#ffff00"
   		android:gravity="center"
   		>
  		</TextView>
    
    <LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent" 
		android:layout_height="100dp"
		android:layout_gravity="bottom"
		android:gravity="center_horizontal|bottom"
        >
    
	<Button
	android:id="@+id/get_cpuid"
    android:layout_width="fill_parent"
	android:layout_height="wrap_content"  
    android:text="@string/get_cpuid"
    android:textSize="@dimen/test_item_button_text_size"
    android:gravity="center"
    />
    </LinearLayout>
    
    
    <LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:layout_gravity="bottom"
		android:gravity="bottom"
        >
			
		<Button android:id="@+id/but_nook" 
			android:layout_width="@dimen/test_item_bottom_button_width"
			android:layout_height="@dimen/test_item_bottom_button_heith" 
			android:text="@string/check_nook"
			android:textSize="@dimen/test_item_tips_text_size"
			android:background="@color/red"
			android:gravity="center"/>
			
		<LinearLayout 
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="right"
        >	
		<Button android:id="@+id/but_ok" 
			android:layout_width="@dimen/test_item_bottom_button_width"
			android:layout_height="@dimen/test_item_bottom_button_heith"
			android:text="@string/check_ok" 
			android:textSize="@dimen/test_item_tips_text_size"
			android:background="@color/green"
			android:gravity="center"
			android:visibility="gone"/>"
		</LinearLayout>
	</LinearLayout>
    
</LinearLayout>
