<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#383838"
    >
    				
  <TextView
  android:id="@+id/battery_status"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:paddingLeft="@dimen/test_item_padding_left"
  android:paddingTop="@dimen/test_item_padding_top"
  android:textSize="@dimen/test_item_tips_text_size"
  android:gravity="top"
  android:text="电量 测试1"
  android:textColor="#ffff00">
  </TextView>
  <TextView
  android:id="@+id/battery_level"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:paddingLeft="@dimen/test_item_padding_left"
  android:paddingTop="@dimen/test_item_padding_top"
  android:textSize="@dimen/test_item_tips_text_size"
  android:gravity="top"
  android:text="电量 测试2"
  android:textColor="#ffff00">
  </TextView>
  
 <LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:layout_gravity="bottom"
		android:gravity="bottom" 
        >
		
			<Button android:id="@+id/but_nook" 
			android:layout_width="@dimen/test_item_bottom_button_width"
			android:layout_height="@dimen/test_item_bottom_button_heith"
			android:text="@string/check_nook"
			android:textSize="@dimen/test_item_tips_text_size"
			android:background="@color/red"
			android:gravity="center"/>
		
		<LinearLayout 
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="right"
        >	
		<Button android:id="@+id/but_ok" 
			android:layout_width="@dimen/test_item_bottom_button_width"
			android:layout_height="@dimen/test_item_bottom_button_heith"
			android:text="@string/check_ok"
			android:textSize="@dimen/test_item_tips_text_size"
			android:background="@color/green"
			android:gravity="center" />
		</LinearLayout>	
	
			
	</LinearLayout>
</LinearLayout>
