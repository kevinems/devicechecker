<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/test_item_wifi_item_height" 
    >

	<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="horizontal"
    >
    
	<LinearLayout
	android:layout_width="wrap_content"
	android:layout_height="fill_parent"
	android:orientation="vertical"
    >
    <TextView android:id="@+id/title"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textSize="@dimen/test_item_wifi_item_ap_textsize" 
        		android:layout_marginLeft="@dimen/test_item_padding_left" 
        		android:layout_gravity="center_vertical">
    </TextView>
     <TextView android:id="@+id/linkstatus"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textSize="@dimen/test_item_wifi_item_link_textsize" 
        		android:layout_marginLeft="@dimen/test_item_padding_left" 
        		android:layout_gravity="center_vertical">
    </TextView>
    </LinearLayout>
    
    <LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
    >
    
     <LinearLayout
	android:layout_width="wrap_content"
	android:layout_height="fill_parent"
	android:layout_gravity="right"
	android:orientation="horizontal"
    >
     <ImageView android:id="@+id/encrypt"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_gravity="center_vertical">
    </ImageView>
    
    <ImageView android:id="@+id/signal"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_gravity="center_vertical">
    </ImageView>
    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>