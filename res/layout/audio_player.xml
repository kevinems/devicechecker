<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:background="#383838"
	android:orientation="vertical">
	
	 <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:id="@+id/audio_tips_text" 
  android:paddingLeft="@dimen/test_item_padding_left"
  android:paddingTop="@dimen/test_item_padding_top"
  android:textSize="@dimen/test_item_tips_text_size"
  android:gravity="top"
  android:text="@string/audio_test_hinta">
  </TextView>
  
  <TextView
   android:layout_width="fill_parent"
   android:id="@+id/headset_state_text" 
   android:layout_height="wrap_content"
   android:textSize="@dimen/test_item_tips_text_size"
   android:paddingTop="@dimen/test_item_padding_top"
   android:gravity="center"
   android:textColor="#ffff00"
   >
   </TextView>
   
    <SeekBar   
        android:id="@+id/seekBar"   
        android:layout_height="wrap_content"   
        android:layout_width="fill_parent"/>   
      
   
   <LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:layout_gravity="bottom"
		android:gravity="bottom" 
        >
		
			<Button android:id="@+id/but_nook" 
			android:layout_width="@dimen/test_item_bottom_button_width"
			android:layout_height="@dimen/test_item_bottom_button_heith"
			android:text="@string/check_nook"
			
			android:textSize="@dimen/test_item_tips_text_size"
			android:background="@color/red"
			android:gravity="center"/>
		
		<LinearLayout 
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="right"
        >	
		<Button android:id="@+id/but_ok" 
			android:layout_width="@dimen/test_item_bottom_button_width"
			android:layout_height="@dimen/test_item_bottom_button_heith"
			android:text="@string/audio_max_volume"
			android:textSize="@dimen/test_item_tips_text_size"
			android:background="@color/green" 
			android:gravity="center" />
		</LinearLayout>	
	
			
	</LinearLayout>
  
</LinearLayout>
